---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import TelegramIcon from '../../public/telegram.svg';
import VKIcon from '../../public/vk.svg';
import InstagramIcon from '../../public/instagram.svg';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="social-links">
			<a href="https://t.me/warhol" target="_blank">
				<span class="sr-only">Telegram</span>
				<Image src={TelegramIcon} alt="Telegram" width="32" height="32"/>
			</a>
			<a href="https://vk.com/normalnikus" target="_blank">
				<span class="sr-only">VK</span>
				<Image src={VKIcon} alt="Telegram" width="32" height="32"/>
			</a>
			<a href="https://instagram.com/warholproject" target="_blank">
				<span class="sr-only">Go to Astro's GitHub repo</span>
				<Image src={InstagramIcon} alt="Telegram" width="32" height="32"/>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
